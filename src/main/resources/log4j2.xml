<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">
            %d{HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
        </Property>
    </Properties>
    <Appenders>
    <Console name="ConsoleAppender" target="SYSTEM_OUT" follw="true">
        <PatternLayout pattern="${LOG_PATTERN}"/>
    </Console>
    </Appenders>>
    <Loggers>
        <Logger name="by.intexsoft.shalkevich" level="info" additivity="false">
            <AppenderRef ref="ConsoleAppender" />
        </Logger>
        <Root level="info">
        </Root>
    </Loggers>
    </Configuration>